const pageTitle = 'Things to Do in Telluride | Tours, Activities & Experiences';
const pageDescription = 'Discover the best activities, tours, and experiences in Telluride, Colorado. From skiing and snowboarding to hiking and mountain biking, find your perfect adventure.';

// Fetch initial activities server-side
let initialActivities: ViatorProductSummary[] = [];

try {
  initialActivities = await getFeaturedActivities(20);
  console.log('[Things to Do] Loaded initial activities:', initialActivities.length);
} catch (error) {
  console.error('[Things to Do] Error loading initial activities:', error);
}
