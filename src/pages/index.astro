---
export const prerender = false;

import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import { HotelSearchWidget } from '@/components/lodging/HotelSearchWidget';
import { FeaturedHotels } from '@/components/lodging/FeaturedHotels';
import { CurrentConditions } from '@/components/weather/CurrentConditions';
import { FeaturedActivities } from '@/components/activities/FeaturedActivities';
import { SkiConditionsWidget } from '@/components/ski/SkiConditionsWidget';
import { GondolaWidget } from '@/components/info/GondolaWidget';
import { EventsWidget } from '@/components/info/EventsWidget';
import { AirQualityWidget } from '@/components/info/AirQualityWidget';
import { WebcamLinks } from '@/components/info/WebcamLinks';
import LodgingMap from '@/components/map/LodgingMap';
import { SITE_DESCRIPTION } from '@/lib/constants';
import { getHomepageHeroImage } from '@/lib/image-library';
import { searchHotels } from '@/lib/liteapi/hotels';
import { getTellurideSkiConditions } from '@/lib/snocountry/client';
import { optimizePexelsImage, generateSrcSet } from '@/lib/image-optimizer';

const heroImage = getHomepageHeroImage();
const optimizedHeroUrl = heroImage ? optimizePexelsImage(heroImage.url, { width: 1920, quality: 85 }) : null;
const heroSrcSet = heroImage ? generateSrcSet(heroImage.url, [640, 768, 1024, 1280, 1536, 1920]) : null;

// Fetch featured hotels server-side (has access to API key)
import type { LiteAPIHotel } from '@/lib/liteapi/types';
import { format, addDays } from 'date-fns';

let featuredHotelsData: LiteAPIHotel[] = [];
let allHotels: LiteAPIHotel[] = [];
let minPrices: Record<string, number> = {};
let featuredCheckInDate: string | undefined;
let skiConditions = null;

// PERFORMANCE OPTIMIZATION: Parallel fetches with timeout and caching
// Move expensive API calls to client-side or use static data
try {
  // Use Promise.allSettled to fetch in parallel with timeouts
  const fetchWithTimeout = (promise: Promise<any>, ms: number) => {
    return Promise.race([
      promise,
      new Promise((_, reject) => setTimeout(() => reject(new Error('Timeout')), ms))
    ]);
  };

  const [hotelsResult, skiResult] = await Promise.allSettled([
    // Fetch basic hotels list (no rates) - fast
    fetchWithTimeout(
      searchHotels({
        cityName: 'Telluride',
        countryCode: 'US',
        limit: 30, // Further reduced for speed
      }),
      3000 // 3 second timeout
    ),
    // Fetch ski conditions in parallel
    fetchWithTimeout(getTellurideSkiConditions(), 2000)
  ]);

  // Process hotels result
  if (hotelsResult.status === 'fulfilled') {
    allHotels = hotelsResult.value.data || [];
    
    // Show top-rated hotels WITHOUT rates for fast initial render
    // Rates will be fetched client-side
    featuredHotelsData = allHotels
      .filter(h => h.review_score && h.review_score >= 7.5)
      .sort((a, b) => (b.review_score || 0) - (a.review_score || 0))
      .slice(0, 6);
    
    // Set check-in date for client-side rate fetching
    const now = new Date();
    featuredCheckInDate = format(addDays(now, 7), 'yyyy-MM-dd');
    
    console.log('[Homepage] Loaded hotels (fast mode):', {
      total: allHotels.length,
      featured: featuredHotelsData.length,
    });
  }

  // Process ski conditions result
  if (skiResult.status === 'fulfilled') {
    skiConditions = skiResult.value;
    console.log('[Homepage] Loaded ski conditions');
  }
} catch (error) {
  console.error('[Homepage] Error in parallel fetch:', error);
}
