import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import HeroMapSearch from '@/components/lodging/HeroMapSearch';
import { FeaturedHotels } from '@/components/lodging/FeaturedHotels';
import { CurrentConditions } from '@/components/weather/CurrentConditions';
import { FeaturedActivities } from '@/components/activities/FeaturedActivities';
import { SkiConditionsWidget } from '@/components/ski/SkiConditionsWidget';
import { GondolaWidget } from '@/components/info/GondolaWidget';
import { EventsWidget } from '@/components/info/EventsWidget';
import { AirQualityWidget } from '@/components/info/AirQualityWidget';
import { WebcamLinks } from '@/components/info/WebcamLinks';
import { SITE_DESCRIPTION } from '@/lib/constants';
import { getHomepageHeroImage, getImagesByCategory } from '@/lib/image-library';
import { optimizePexelsImage, generateSrcSet } from '@/lib/image-optimizer';
import { searchHotels } from '@/lib/liteapi/hotels';
import { getTellurideSkiConditions } from '@/lib/snocountry/client';
import { getTopHotels } from '@/lib/top-hotels';

const heroImage = getHomepageHeroImage();
const heroImages = getImagesByCategory('hero') || getImagesByCategory('resort') || [];
const ctaImage = getImagesByCategory('resort')[3] || getImagesByCategory('luxury')[0] || null;

// Fetch featured hotels server-side (has access to API key)
import type { LiteAPIHotel } from '@/lib/liteapi/types';
import { format, addDays } from 'date-fns';
import { getMinRates } from '@/lib/liteapi/rates';

let featuredHotelsData: LiteAPIHotel[] = [];
let topHotelsData: LiteAPIHotel[] = [];
let allHotels: LiteAPIHotel[] = [];
let minPrices: Record<string, number> = {};
let featuredCheckInDate: string | undefined;
let skiConditions = null;

// PERFORMANCE OPTIMIZATION: Parallel fetches with timeout and caching
// Move expensive API calls to client-side or use static data
try {
  // Use Promise.allSettled to fetch in parallel with timeouts
  const fetchWithTimeout = (promise: Promise<any>, ms: number) => {
    return Promise.race([
      promise,
      new Promise((_, reject) => setTimeout(() => reject(new Error('Timeout')), ms))
    ]);
  };

  const [hotelsResult, skiResult] = await Promise.allSettled([
    // Fetch basic hotels list (no rates) - fast
    fetchWithTimeout(
      searchHotels({
        cityName: 'Telluride',
        countryCode: 'US',
        limit: 30, // Further reduced for speed
      }),
      3000 // 3 second timeout
    ),
    // Fetch ski conditions in parallel
    fetchWithTimeout(getTellurideSkiConditions(), 2000)
  ]);

  // Process hotels result
  if (hotelsResult.status === 'fulfilled') {
    allHotels = hotelsResult.value.data || [];
    
    // Get top 20 hotels using balanced algorithm to ensure we have enough with availability
    // Score = review_score × log(review_count) × amenity_factor
    // We fetch more than needed because not all will have availability
    const candidateHotels = getTopHotels(allHotels, 20);
    
    // Set check-in date (7 days from now)
    const now = new Date();
    featuredCheckInDate = format(addDays(now, 7), 'yyyy-MM-dd');
    const checkOutDate = format(addDays(now, 14), 'yyyy-MM-dd');
    
    // Fetch min rates for candidate hotels to check availability
    // This ensures we can show the best 6 hotels that actually have rooms available
    const candidateHotelIds = candidateHotels.map(h => h.hotel_id);
    if (candidateHotelIds.length > 0) {
      try {
        const minRatesData = await getMinRates({
          hotelIds: candidateHotelIds,
          checkIn: featuredCheckInDate,
          checkOut: checkOutDate,
          adults: 2,
          currency: 'USD',
          guestNationality: 'US',
          timeout: 10, // Increased timeout for more hotels
        });
        
        // Calculate nights for per-night pricing
        const nights = Math.ceil((new Date(checkOutDate).getTime() - new Date(featuredCheckInDate).getTime()) / (1000 * 60 * 60 * 24));
        
        // Filter hotels to only those with availability and extract prices
        const hotelsWithAvailability = candidateHotels.filter(hotel => {
          const rateData = minRatesData[hotel.hotel_id];
          if (rateData && rateData.price) {
            // Use price (retail rate with commission already included)
            // MinRates returns TOTAL price, need to divide by nights
            const totalPrice = rateData.price || 0;
            minPrices[hotel.hotel_id] = nights > 0 ? totalPrice / nights : totalPrice;
            return true;
          }
          return false;
        });
        
        // Take the best 6 hotels that have availability
        featuredHotelsData = hotelsWithAvailability.slice(0, 6);
        // Also store top 10 for other uses on the page
        topHotelsData = hotelsWithAvailability.slice(0, 10);
        
        console.log('[Homepage] Loaded hotels with availability:', {
          total: allHotels.length,
          candidates: candidateHotels.length,
          withAvailability: hotelsWithAvailability.length,
          featured: featuredHotelsData.length,
          topRated: topHotelsData.length,
          pricesLoaded: Object.keys(minPrices).length,
          availabilityRate: `${Math.round((hotelsWithAvailability.length / candidateHotels.length) * 100)}%`,
          samplePrices: Object.entries(minPrices).slice(0, 3).map(([id, price]) => ({
            hotelId: id,
            pricePerNight: price,
            nights: nights,
          })),
        });
      } catch (error) {
        console.error('[Homepage] CRITICAL: Error fetching min rates:', error);
        // In production, this should not happen - indicates API or network issue
        // Re-throw to surface the error rather than silently failing
        throw new Error(`Failed to fetch hotel rates: ${error instanceof Error ? error.message : 'Unknown error'}`);
      }
    }
    
    console.log('[Homepage] Loaded hotels (smart algorithm):', {
      total: allHotels.length,
      featured: featuredHotelsData.length,
      topRated: topHotelsData.length
    });
  }

  // Process ski conditions result
  if (skiResult.status === 'fulfilled') {
    skiConditions = skiResult.value;
    console.log('[Homepage] Loaded ski conditions');
  }
} catch (error) {
  console.error('[Homepage] Error in parallel fetch:', error);
}
