---
export const prerender = false;

import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import { HotelSearchWidget } from '@/components/lodging/HotelSearchWidget';
import { FeaturedHotels } from '@/components/lodging/FeaturedHotels';
import LodgingMap from '@/components/map/LodgingMap';
import { SITE_DESCRIPTION, FEATURED_HOTEL_IDS } from '@/lib/constants';
import { getHomepageHeroImage, getFeaturedImages } from '@/lib/image-library';
import { searchHotels } from '@/lib/liteapi/hotels';

const heroImage = getHomepageHeroImage();
const featuredImages = getFeaturedImages();

// Fetch featured hotels server-side (has access to API key)
import type { LiteAPIHotel } from '@/lib/liteapi/types';
import { format, addDays } from 'date-fns';

let featuredHotelsData: LiteAPIHotel[] = [];
let allHotels: LiteAPIHotel[] = [];
let minPrices: Record<string, number> = {};

try {
  const hotelData = await searchHotels({
    cityName: 'Telluride',
    countryCode: 'US',
    limit: 100,
  });
  
  allHotels = hotelData.data || [];
  
  // Get top 6 hotels by review score for featured section
  featuredHotelsData = allHotels
    .filter(h => h.review_score && h.review_count && h.review_count > 50)
    .sort((a, b) => (b.review_score || 0) - (a.review_score || 0))
    .slice(0, 6);
  
  // Fetch rates for featured hotels with default dates (7 days from now for 7 nights)
  if (featuredHotelsData.length > 0) {
    try {
      const checkIn = format(addDays(new Date(), 7), 'yyyy-MM-dd');
      const checkOut = format(addDays(new Date(), 14), 'yyyy-MM-dd');
      const hotelIds = featuredHotelsData.map(h => h.hotel_id).filter(Boolean);
      
      if (hotelIds.length > 0) {
        const { searchRates } = await import('@/lib/liteapi/rates');
        const ratesData = await searchRates({
          hotelIds: hotelIds.join(','),
          checkIn,
          checkOut,
          adults: 2,
        });
        
        if (ratesData.data && ratesData.data.length > 0) {
          ratesData.data.forEach((hotel: any) => {
            const hotelMinPrice = hotel.rooms?.flatMap((r: any) =>
              r.rates?.map((rate: any) => rate.net?.amount || Infinity)
            ).filter((p: number) => p !== Infinity);

            if (hotelMinPrice && hotelMinPrice.length > 0) {
              minPrices[hotel.hotel_id] = Math.min(...hotelMinPrice);
            }
          });
          console.log('[Homepage] Prices fetched for featured hotels:', Object.keys(minPrices).length);
        }
      }
    } catch (error) {
      console.error('[Homepage] Error fetching rates:', error);
    }
  }
} catch (error) {
  console.error('[Homepage] Error fetching featured hotels:', error);
}
