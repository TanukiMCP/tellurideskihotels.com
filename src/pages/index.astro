---
export const prerender = false;

import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import { HotelSearchWidget } from '@/components/lodging/HotelSearchWidget';
import { FeaturedHotels } from '@/components/lodging/FeaturedHotels';
import { CurrentConditions } from '@/components/weather/CurrentConditions';
import { FeaturedActivities } from '@/components/activities/FeaturedActivities';
import LodgingMap from '@/components/map/LodgingMap';
import { SITE_DESCRIPTION } from '@/lib/constants';
import { getHomepageHeroImage } from '@/lib/image-library';
import { searchHotels } from '@/lib/liteapi/hotels';

const heroImage = getHomepageHeroImage();

// Fetch featured hotels server-side (has access to API key)
import type { LiteAPIHotel } from '@/lib/liteapi/types';
import { format, addDays } from 'date-fns';

let featuredHotelsData: LiteAPIHotel[] = [];
let allHotels: LiteAPIHotel[] = [];
let minPrices: Record<string, number> = {};
let featuredCheckInDate: string | undefined;

try {
  // OPTIMIZATION: Only fetch what we need for initial page load
  // Get limited hotels for the map (50 is plenty for visual display)
  const hotelData = await searchHotels({
    cityName: 'Telluride',
    countryCode: 'US',
    limit: 50, // Reduced from 500 - map doesn't need all hotels
  });
  
  allHotels = hotelData.data || [];
  
  // For featured section, get hotels WITH availability and rates
  // Use realistic upcoming dates: 7 days from now for 7-night stay
  const now = new Date();
  const checkIn = format(addDays(now, 7), 'yyyy-MM-dd');
  const checkOut = format(addDays(now, 14), 'yyyy-MM-dd');
  featuredCheckInDate = checkIn;
  
  console.log('[Homepage] Searching for hotels with availability:', { checkIn, checkOut });
  
  try {
    const { searchHotelsWithRates } = await import('@/lib/liteapi/rates');
    const availableHotels = await searchHotelsWithRates({
      cityName: 'Telluride',
      countryCode: 'US',
      checkIn,
      checkOut,
      adults: 2,
      limit: 20, // Reduced from 500 - we only show 6, so 20 gives us buffer
    });
    
    // Get top 6 hotels by review score from those with availability
    featuredHotelsData = availableHotels.hotels
      .filter(h => h.review_score && h.review_count && h.review_count > 20)
      .sort((a, b) => (b.review_score || 0) - (a.review_score || 0))
      .slice(0, 6);
    
    minPrices = availableHotels.minPrices;
    
    console.log('[Homepage] Featured hotels with availability:', {
      totalAvailable: availableHotels.hotels.length,
      featured: featuredHotelsData.length,
      withPrices: Object.keys(minPrices).length,
    });
  } catch (error) {
    console.error('[Homepage] Error fetching hotels with availability:', error);
    // Fallback to showing top-rated hotels without availability check
    featuredHotelsData = allHotels
      .filter(h => h.review_score && h.review_count && h.review_count > 50)
      .sort((a, b) => (b.review_score || 0) - (a.review_score || 0))
      .slice(0, 6);
    console.log('[Homepage] Fallback: Showing top-rated hotels without availability');
  }
} catch (error) {
  console.error('[Homepage] Error fetching featured hotels:', error);
}
---

