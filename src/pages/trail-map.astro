---
import BaseLayout from '@/layouts/BaseLayout.astro';
import InteractiveTrailMap from '@/components/map/InteractiveTrailMap';
import { getImagesByCategory } from '@/lib/image-library';
import { optimizePexelsImage, generateSrcSet } from '@/lib/image-optimizer';

// Get resort images for the download section
const resortImages = getImagesByCategory('resort');
const downloadImage = resortImages && resortImages.length > 2 ? resortImages[2] : null;
---

<BaseLayout 
  title="Interactive Telluride Ski Trail Map | Live Conditions & Hotel Locations"
  description="Explore Telluride's ski trails with our interactive trail map. View lift status, trail difficulty, restaurants, and find nearby hotels. Works offline!"
>
  <div class="min-h-screen bg-neutral-50">
    <!-- Back to Home Button -->
    <div class="fixed top-4 left-4 z-50">
      <a 
        href="/" 
        class="flex items-center gap-2 bg-white hover:bg-neutral-50 text-neutral-900 px-4 py-3 rounded-xl shadow-lg hover:shadow-xl transition-all group border border-neutral-200"
      >
        <svg class="w-5 h-5 text-primary-600 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <div class="flex items-center gap-2">
          <img src="/favicon-icon.png" alt="Logo" class="w-8 h-8" />
          <span class="font-bold text-sm">Home</span>
        </div>
      </a>
    </div>

    <!-- Trail Map Container -->
    <div class="container mx-auto px-4 pt-20 pb-8">
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border border-neutral-200">
        <!-- Integrated Map Header -->
        <div class="absolute top-0 left-0 right-0 z-20 bg-gradient-to-b from-white/95 via-white/90 to-transparent backdrop-blur-md border-b border-neutral-200/50 px-6 py-4">
          <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-primary-600 flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              </div>
              <div>
                <h1 class="text-xl font-black text-neutral-900">Interactive Trail Map</h1>
                <p class="text-xs text-neutral-600 font-semibold">148 Trails • 19 Lifts • 2,000+ Acres</p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <span class="inline-flex items-center gap-2 bg-green-100 text-green-800 px-3 py-1.5 rounded-lg text-xs font-bold shadow-sm">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Works Offline
              </span>
              <a 
                href="/places-to-stay" 
                class="inline-flex items-center gap-2 bg-primary-600 text-white px-4 py-2 rounded-lg font-black text-sm hover:bg-primary-700 transition-all shadow-lg hover:shadow-xl"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Book Lodging
              </a>
            </div>
          </div>
        </div>

        <!-- Interactive Map -->
        <div style="height: calc(100vh - 250px); min-height: 700px;">
          <InteractiveTrailMap client:load />
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-green-100 rounded-full p-3">
              <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">23%</p>
              <p class="text-sm text-neutral-600">Beginner Terrain</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-blue-100 rounded-full p-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">36%</p>
              <p class="text-sm text-neutral-600">Intermediate Terrain</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-red-100 rounded-full p-3">
              <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">41%</p>
              <p class="text-sm text-neutral-600">Advanced/Expert Terrain</p>
            </div>
          </div>
        </div>
      </div>

      <!-- PWA Install Prompt - Professional Stat Card -->
      <div class="relative bg-white rounded-2xl shadow-xl overflow-hidden mt-8 border border-neutral-200">
        {downloadImage ? (
          <>
            <img 
              src={optimizePexelsImage(downloadImage.url, { width: 1920, quality: 85 })}
              srcset={generateSrcSet(downloadImage.url, [640, 768, 1024, 1280, 1536, 1920])}
              sizes="100vw"
              alt="Telluride Ski Resort" 
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-white/95 via-white/90 to-white/95 backdrop-blur-sm"></div>
          </>
        ) : (
          <div class="absolute inset-0 bg-gradient-to-br from-neutral-50 to-white"></div>
        )}
        
        <div class="relative p-8 lg:p-12">
          <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
              <!-- Left: Stats & Features -->
              <div>
                <h2 class="text-3xl lg:text-4xl font-black text-neutral-900 mb-3">
                  Take the Map With You
                </h2>
                <p class="text-lg text-neutral-700 mb-8 font-semibold">
                  Download our trail map app for offline access on the slopes
                </p>
                
                <!-- Terrain Breakdown -->
                <div class="grid grid-cols-3 gap-4 mb-8">
                  <div class="bg-green-50 rounded-xl p-4 border-2 border-green-200">
                    <div class="text-3xl font-black text-green-700 mb-1">23%</div>
                    <div class="text-xs font-bold text-green-900 uppercase tracking-wide">Beginner</div>
                  </div>
                  <div class="bg-blue-50 rounded-xl p-4 border-2 border-blue-200">
                    <div class="text-3xl font-black text-blue-700 mb-1">36%</div>
                    <div class="text-xs font-bold text-blue-900 uppercase tracking-wide">Intermediate</div>
                  </div>
                  <div class="bg-red-50 rounded-xl p-4 border-2 border-red-200">
                    <div class="text-3xl font-black text-red-700 mb-1">41%</div>
                    <div class="text-xs font-bold text-red-900 uppercase tracking-wide">Expert</div>
                  </div>
                </div>
                
                <!-- Features Grid -->
                <div class="grid grid-cols-2 gap-4 mb-8">
                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-black text-neutral-900 text-sm">Works Offline</div>
                      <div class="text-xs text-neutral-600 font-semibold">No signal needed</div>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-black text-neutral-900 text-sm">3D Terrain</div>
                      <div class="text-xs text-neutral-600 font-semibold">Interactive view</div>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-black text-neutral-900 text-sm">Live POIs</div>
                      <div class="text-xs text-neutral-600 font-semibold">Lifts & facilities</div>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-black text-neutral-900 text-sm">Real-Time</div>
                      <div class="text-xs text-neutral-600 font-semibold">Trail updates</div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Right: CTA -->
              <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-2xl p-8 lg:p-10 text-white shadow-2xl">
                <div class="w-16 h-16 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center mb-6 mx-auto">
                  <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-black text-center mb-4">Install Trail Map</h3>
                <p class="text-center text-white/90 mb-6 font-semibold">
                  Perfect for use on the mountain with offline access
                </p>
                <button 
                  id="install-button"
                  class="w-full bg-white text-primary-700 px-8 py-4 rounded-xl font-black text-lg shadow-xl hover:shadow-2xl hover:scale-105 transition-all flex items-center justify-center gap-3"
                >
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  Download App
                </button>
                <p class="text-center text-white/80 mt-4 text-sm font-semibold">
                  iOS • Android • Desktop
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- PWA Install Script -->
  <script>
    let deferredPrompt: any;
    const installButton = document.getElementById('install-button');

    // Register service worker
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then((registration) => {
            console.log('ServiceWorker registered:', registration.scope);
          })
          .catch((err) => {
            console.log('ServiceWorker registration failed:', err);
          });
      });
    }

    // Listen for beforeinstallprompt event
    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
      if (installButton) {
        installButton.style.display = 'inline-flex';
      }
    });

    // Handle install button click
    if (installButton) {
      installButton.addEventListener('click', async () => {
        if (deferredPrompt) {
          deferredPrompt.prompt();
          const { outcome } = await deferredPrompt.userChoice;
          console.log(`User response to install prompt: ${outcome}`);
          deferredPrompt = null;
          installButton.style.display = 'none';
        }
      });
    }

    // Handle successful installation
    window.addEventListener('appinstalled', () => {
      console.log('PWA installed successfully');
      deferredPrompt = null;
    });
  </script>
</BaseLayout>

