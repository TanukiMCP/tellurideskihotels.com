---
import BaseLayout from '@/layouts/BaseLayout.astro';
import InteractiveTrailMap from '@/components/map/InteractiveTrailMap';
import { getImagesByCategory } from '@/lib/image-library';
import { optimizePexelsImage, generateSrcSet } from '@/lib/image-optimizer';

// Get resort images for the download section
const resortImages = getImagesByCategory('resort');
const downloadImage = resortImages && resortImages.length > 2 ? resortImages[2] : null;
---

<BaseLayout 
  title="Interactive Telluride Ski Trail Map | Live Conditions & Hotel Locations"
  description="Explore Telluride's ski trails with our interactive trail map. View lift status, trail difficulty, restaurants, and find nearby hotels. Works offline!"
>
  <div class="min-h-screen bg-neutral-50">
    <!-- Back to Home Button -->
    <div class="fixed top-4 left-4 z-50">
      <a 
        href="/" 
        class="flex items-center gap-2 bg-white hover:bg-neutral-50 text-neutral-900 px-4 py-3 rounded-xl shadow-lg hover:shadow-xl transition-all group border border-neutral-200"
      >
        <svg class="w-5 h-5 text-primary-600 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <div class="flex items-center gap-2">
          <img src="/favicon-icon.png" alt="Logo" class="w-8 h-8" />
          <span class="font-bold text-sm">Home</span>
        </div>
      </a>
    </div>

    <!-- Trail Map Container -->
    <div class="container mx-auto px-4 pt-20 pb-8">
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border border-neutral-200">
        <!-- Map Controls Info Bar -->
        <div class="bg-gradient-to-r from-primary-50 to-blue-50 border-b border-neutral-200 px-6 py-4">
          <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h1 class="text-xl font-black text-neutral-900">Interactive Trail Map</h1>
                <p class="text-sm text-neutral-600 font-semibold">Click trails, lifts, or POIs for details â€¢ Zoom and pan to explore</p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <span class="inline-flex items-center gap-2 bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-bold">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Works Offline
              </span>
              <a 
                href="/places-to-stay" 
                class="inline-flex items-center gap-2 bg-primary-600 text-white px-4 py-2 rounded-lg font-black text-sm hover:bg-primary-700 transition-colors"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Book Lodging
              </a>
            </div>
          </div>
        </div>

        <!-- Interactive Map -->
        <div style="height: calc(100vh - 250px); min-height: 700px;">
          <InteractiveTrailMap client:load />
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-green-100 rounded-full p-3">
              <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">23%</p>
              <p class="text-sm text-neutral-600">Beginner Terrain</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-blue-100 rounded-full p-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">36%</p>
              <p class="text-sm text-neutral-600">Intermediate Terrain</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-card p-6 border border-neutral-200">
          <div class="flex items-center gap-4">
            <div class="bg-red-100 rounded-full p-3">
              <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-neutral-900">41%</p>
              <p class="text-sm text-neutral-600">Advanced/Expert Terrain</p>
            </div>
          </div>
        </div>
      </div>

      <!-- PWA Install Prompt -->
      <div class="relative bg-gradient-to-br from-primary-600 to-primary-800 rounded-2xl shadow-xl overflow-hidden mt-8">
        {downloadImage ? (
          <>
            <img 
              src={optimizePexelsImage(downloadImage.url, { width: 1920, quality: 85 })}
              srcset={generateSrcSet(downloadImage.url, [640, 768, 1024, 1280, 1536, 1920])}
              sizes="100vw"
              alt="Telluride Ski Resort" 
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-primary-900/90 via-primary-800/85 to-primary-900/90"></div>
          </>
        ) : null}
        <div class="relative max-w-3xl mx-auto text-center p-12 text-white">
          <svg class="w-20 h-20 mx-auto mb-6 text-primary-200 drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          <h2 class="text-4xl font-black mb-4 drop-shadow-lg">Install Trail Map App</h2>
          <p class="text-xl text-white/95 mb-8 font-semibold drop-shadow-md">
            Access the trail map offline on your phone. Perfect for use on the mountain!
          </p>
          <button 
            id="install-button"
            class="inline-flex items-center gap-2 bg-white text-primary-700 px-10 py-5 rounded-xl font-black text-lg shadow-2xl hover:shadow-2xl hover:scale-105 transition-all"
          >
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Install Now
          </button>
          <p class="text-sm text-white/90 mt-6 font-semibold drop-shadow-md">
            Works on iOS, Android, and Desktop browsers
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- PWA Install Script -->
  <script>
    let deferredPrompt: any;
    const installButton = document.getElementById('install-button');

    // Register service worker
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then((registration) => {
            console.log('ServiceWorker registered:', registration.scope);
          })
          .catch((err) => {
            console.log('ServiceWorker registration failed:', err);
          });
      });
    }

    // Listen for beforeinstallprompt event
    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
      if (installButton) {
        installButton.style.display = 'inline-flex';
      }
    });

    // Handle install button click
    if (installButton) {
      installButton.addEventListener('click', async () => {
        if (deferredPrompt) {
          deferredPrompt.prompt();
          const { outcome } = await deferredPrompt.userChoice;
          console.log(`User response to install prompt: ${outcome}`);
          deferredPrompt = null;
          installButton.style.display = 'none';
        }
      });
    }

    // Handle successful installation
    window.addEventListener('appinstalled', () => {
      console.log('PWA installed successfully');
      deferredPrompt = null;
    });
  </script>
</BaseLayout>

