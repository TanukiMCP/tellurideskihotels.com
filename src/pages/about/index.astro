---
import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import { getImagesByCategory } from '@/lib/image-library';

const resortImages = getImagesByCategory('resort');
const mountainImages = getImagesByCategory('mountains');
const luxuryImages = getImagesByCategory('luxury');

const heroImage = resortImages[0];
const missionImage = mountainImages[0] || resortImages[1];
const experienceImage = luxuryImages[0] || resortImages[2];
---

<PageLayout
  title="About Us - Telluride Ski Hotels"
  description="Learn about Telluride Ski Hotels - your trusted source for finding the best places to stay in Telluride, Colorado."
>
  <!-- Hero Section with Background Image -->
  <div class="relative py-32 lg:py-40 overflow-hidden">
    {heroImage ? (
      <>
        <img 
          src={heroImage.url}
          alt="Telluride Ski Resort" 
          class="absolute inset-0 w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-primary-900/95 via-primary-800/90 to-primary-900/95"></div>
      </>
    ) : (
      <div class="absolute inset-0 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800"></div>
    )}
    
    <Container class="relative">
      <Breadcrumbs items={[
        { label: 'Home', href: '/' },
        { label: 'About', href: undefined },
      ]} />
      
      <div class="max-w-4xl mx-auto text-center text-white mt-8">
        <h1 class="text-4xl md:text-5xl lg:text-6xl mb-6 font-extrabold drop-shadow-2xl leading-tight">
          Your Gateway to Telluride
        </h1>
        <p class="text-xl lg:text-2xl leading-relaxed font-medium text-white/95 max-w-3xl mx-auto drop-shadow-lg">
          Connecting travelers with exceptional accommodations and unforgettable experiences in Colorado's premier mountain destination.
        </p>
      </div>
    </Container>
  </div>

  <Container class="py-16 lg:py-20">
    <!-- Mission Section with Split Layout -->
    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
      <div>
        <h2 class="text-3xl lg:text-4xl font-extrabold text-neutral-900 mb-6">
          Our Mission
        </h2>
        <p class="text-lg text-neutral-700 leading-relaxed mb-6">
          At Telluride Ski Hotels, we're passionate about creating seamless travel experiences. Our mission is to connect you with the perfect accommodation in Telluride, whether you're chasing powder on world-class slopes or seeking adventure in the spectacular San Juan Mountains.
        </p>
        <p class="text-lg text-neutral-700 leading-relaxed mb-6">
          We work with leading lodging providers to offer real-time availability, competitive pricing, and instant booking confirmation for hundreds of propertiesâ€”from cozy ski-in/ski-out condos to luxurious mountain estates.
        </p>
        <a href="/places-to-stay" class="inline-flex items-center gap-2 text-primary-600 font-bold hover:gap-4 transition-all">
          Browse Accommodations
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      {missionImage && (
        <div class="relative h-[400px] lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src={missionImage.url}
            alt="Telluride Mountain Views" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      )}
    </div>

    <!-- Experience Section with Reverse Split Layout -->
    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
      {experienceImage && (
        <div class="relative h-[400px] lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl lg:order-first order-last">
          <img 
            src={experienceImage.url}
            alt="Luxury Telluride Accommodations" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      )}
      <div>
        <h2 class="text-3xl lg:text-4xl font-extrabold text-neutral-900 mb-6">
          Beyond Lodging
        </h2>
        <p class="text-lg text-neutral-700 leading-relaxed mb-6">
          Your Telluride adventure extends far beyond your hotel room. We've partnered with Viator to bring you curated <a href="/things-to-do" class="text-primary-600 font-semibold hover:underline">activities and tours</a> that showcase the best of this mountain paradise.
        </p>
        <p class="text-lg text-neutral-700 leading-relaxed mb-6">
          Stay informed with our <a href="/mountain-conditions" class="text-primary-600 font-semibold hover:underline">live ski conditions</a>, weather forecasts, and trail reports. Plan your perfect ski day with real-time snow reports, webcam feeds, and lift status updates.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/things-to-do" class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-primary-700 transition-colors">
            Explore Activities
          </a>
          <a href="/mountain-conditions" class="inline-flex items-center gap-2 bg-white text-primary-600 px-6 py-3 rounded-xl font-bold border-2 border-primary-600 hover:bg-primary-50 transition-colors">
            View Conditions
          </a>
        </div>
      </div>
    </div>

    <!-- Why Choose Us Grid -->
    <div class="bg-neutral-50 rounded-3xl p-8 lg:p-12 mb-16">
      <h2 class="text-3xl lg:text-4xl font-extrabold text-neutral-900 mb-4 text-center">Why Choose Telluride Ski Hotels</h2>
      <p class="text-lg text-neutral-600 text-center mb-12 max-w-2xl mx-auto">
        We're committed to providing you with a superior booking experience from search to check-out.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Real-Time Availability</h3>
            <p class="text-neutral-600 text-sm">Live updates on pricing and availability across hundreds of properties</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-green-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Instant Confirmation</h3>
            <p class="text-neutral-600 text-sm">Receive immediate booking confirmation with secure, encrypted payments</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">24/7 Support</h3>
            <p class="text-neutral-600 text-sm">Our customer support team is always available to assist you</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Verified Reviews</h3>
            <p class="text-neutral-600 text-sm">Real traveler reviews help you make informed decisions</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-amber-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Best Price Guarantee</h3>
            <p class="text-neutral-600 text-sm">Competitive rates with no hidden fees or booking charges</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-red-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Live Conditions</h3>
            <p class="text-neutral-600 text-sm">Stay updated with real-time weather, snow reports, and trail status</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 rounded-3xl p-12 lg:p-16 text-white text-center shadow-elevated">
      <h2 class="text-3xl lg:text-4xl font-extrabold mb-6">Ready to Experience Telluride?</h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto leading-relaxed text-white/95">
        Start planning your perfect mountain getaway today. Browse accommodations, explore activities, and check current conditions.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/places-to-stay"
          class="inline-flex items-center gap-2 bg-white text-primary-600 px-10 py-4 rounded-xl font-bold text-lg shadow-card hover:shadow-card-hover hover:scale-105 transition-all duration-300"
        >
          Find Your Stay
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </a>
        <a
          href="/blog"
          class="inline-flex items-center gap-2 bg-primary-800 text-white px-10 py-4 rounded-xl font-bold text-lg border-2 border-white/30 hover:bg-primary-900 transition-all duration-300"
        >
          Read Our Blog
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </a>
      </div>
    </div>
  </Container>
</PageLayout>
