---
import PageLayout from '@/components/layout/PageLayout.astro';
import Container from '@/components/layout/Container.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import { getImagesByCategory } from '@/lib/image-library';

const resortImages = getImagesByCategory('resort');
const aboutImage = resortImages[1] || resortImages[0];
---

<PageLayout
  title="About Us - Telluride Ski Hotels"
  description="Learn about Telluride Ski Hotels - your trusted source for booking ski hotels in Telluride, Colorado."
>
  <Container class="py-16 lg:py-20">
    <Breadcrumbs items={[
      { label: 'Home', href: '/' },
      { label: 'About', href: undefined },
    ]} />

    {aboutImage && (
      <div class="mb-16 rounded-2xl overflow-hidden shadow-card">
        <img 
          src={aboutImage.url} 
          alt="Telluride Ski Resort" 
          class="w-full h-96 lg:h-[500px] object-cover"
          loading="lazy"
        />
      </div>
    )}

    <div class="max-w-4xl mx-auto">
      <h1 class="text-display-md lg:text-display-lg mb-8 text-neutral-900 text-center">About Telluride Ski Hotels</h1>
      
      <div class="prose prose-lg max-w-none">
        <p class="text-xl text-neutral-700 leading-relaxed mb-8">
          Telluride Ski Hotels is your trusted partner for finding and booking the perfect ski hotel in Telluride, Colorado. 
          We provide real-time availability, competitive pricing, and instant booking confirmation for hundreds of hotels.
        </p>

        <div class="bg-neutral-50 rounded-2xl p-8 lg:p-12 mb-12">
          <h2 class="text-display-sm text-neutral-900 mb-6">Our Mission</h2>
          <p class="text-lg text-neutral-700 leading-relaxed">
            Our mission is to make it easy for ski enthusiasts to find and book the perfect accommodation in Telluride. 
            We work with leading hotel providers to offer you the best selection of properties at competitive prices, backed by 
            secure payment processing and 24/7 customer support.
          </p>
        </div>

        <h2 class="text-display-sm text-neutral-900 mb-8">Why Choose Us</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-card">
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-neutral-900 mb-2">Real-time Availability</h3>
              <p class="text-neutral-600">See current availability and pricing updated in real-time</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-card">
            <div class="w-12 h-12 rounded-xl bg-accent-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-neutral-900 mb-2">Instant Confirmation</h3>
              <p class="text-neutral-600">Get instant booking confirmation with secure payment</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-card">
            <div class="w-12 h-12 rounded-xl bg-green-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-neutral-900 mb-2">Secure Payment</h3>
              <p class="text-neutral-600">All transactions are encrypted and secure</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-card">
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-neutral-900 mb-2">24/7 Support</h3>
              <p class="text-neutral-600">Our customer support team is always here to help</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-neutral-200 shadow-card">
            <div class="w-12 h-12 rounded-xl bg-accent-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-neutral-900 mb-2">No Payment Fees</h3>
              <p class="text-neutral-600">Direct booking with no hidden charges</p>
            </div>
          </div>
        </div>

        <div class="text-center bg-gradient-primary rounded-2xl p-12 text-white shadow-elevated">
          <h2 class="text-display-sm mb-4">Ready to Book Your Stay?</h2>
          <p class="text-xl mb-8 text-white/90">Start searching for the perfect ski hotel in Telluride</p>
          <a href="/lodging" class="inline-flex items-center gap-2 bg-white text-primary-600 px-10 py-4 rounded-xl font-bold text-lg shadow-elevated hover:scale-105 transition-all duration-300">
            Search Hotels
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </Container>
</PageLayout>
