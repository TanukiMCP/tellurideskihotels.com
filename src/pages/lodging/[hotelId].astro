---
export const prerender = false;

const { hotelId } = Astro.params;
const url = Astro.url;
const searchParams = url.searchParams;

// Redirect /lodging/[hotelId] to /places-to-stay/[hotelId]
const queryString = searchParams.toString();
const redirectUrl = `/places-to-stay/${hotelId}` + (queryString ? `?${queryString}` : '');

return Astro.redirect(redirectUrl, 301);
