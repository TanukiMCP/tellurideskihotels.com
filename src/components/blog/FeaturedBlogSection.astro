---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '@/lib/utils';

interface Props {
  featuredArticle: CollectionEntry<'blog'> | null;
  recentArticles?: CollectionEntry<'blog'>[];
}

const { featuredArticle, recentArticles = [] } = Astro.props;

if (!featuredArticle) {
  return null;
}

const { data } = featuredArticle;
const featuredUrl = `/blog/${data.category}/${featuredArticle.slug}`;
---

<section class="bg-white py-16 lg:py-24 border-y border-neutral-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-4 py-2 rounded-full text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Travel Guides & Tips
      </div>
      <h2 class="text-display-sm lg:text-display-md mb-6 text-neutral-900 font-extrabold">
        Expert Telluride Travel Guides
      </h2>
      <p class="text-lg lg:text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
        Discover insider tips, comprehensive guides, and expert advice to make the most of your Telluride ski vacation.
      </p>
    </div>

    <!-- Featured Article -->
    <article class="group mb-12 overflow-hidden rounded-2xl bg-white border border-neutral-200 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1">
      <a href={featuredUrl} class="block">
        <div class="lg:grid lg:grid-cols-2 gap-0">
          <div class="aspect-[16/9] lg:aspect-auto lg:h-full overflow-hidden">
            <img
              src={data.featuredImage}
              alt={data.featuredImageAlt}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          <div class="p-8 lg:p-12 flex flex-col justify-center">
            <div class="mb-4 flex items-center gap-3 text-sm text-neutral-600">
              <span class="rounded-lg bg-primary-50 px-3 py-1.5 text-xs font-semibold text-primary-700 uppercase tracking-wide">
                {data.category.replace(/-/g, ' ')}
              </span>
              <time datetime={data.publishDate.toISOString()}>
                {formatDate(data.publishDate)}
              </time>
              <span>•</span>
              <span>{data.readingTime} min read</span>
            </div>
            <h3 class="mb-4 text-3xl lg:text-4xl font-bold text-neutral-900 transition-colors group-hover:text-primary-600 leading-tight">
              {data.title}
            </h3>
            <p class="mb-6 text-lg text-neutral-600 leading-relaxed line-clamp-3">
              {data.excerpt}
            </p>
            <div class="flex items-center justify-between">
              <span class="inline-flex items-center gap-2 text-base font-semibold text-primary-600 group-hover:gap-3 transition-all">
                Read Full Guide
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </span>
              {data.tags && data.tags.length > 0 && (
                <div class="hidden sm:flex gap-2">
                  {data.tags.slice(0, 3).map((tag: string) => (
                    <span
                      class="rounded-lg bg-neutral-100 px-2.5 py-1 text-xs font-medium text-neutral-700"
                    >
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </div>
      </a>
    </article>

    <!-- Recent Articles Grid -->
    {recentArticles.length > 0 && (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
        {recentArticles.map((article) => {
          const articleData = article.data;
          const articleUrl = `/blog/${articleData.category}/${article.slug}`;
          
          return (
            <article
              class="group overflow-hidden rounded-2xl bg-white border border-neutral-200 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1"
            >
              <a href={articleUrl} class="block">
                <div class="aspect-[16/9] overflow-hidden">
                  <img
                    src={articleData.featuredImage}
                    alt={articleData.featuredImageAlt}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
                <div class="p-5 lg:p-6">
                  <div class="mb-2 flex items-center gap-2 text-xs text-neutral-600">
                    <span class="rounded-lg bg-primary-50 px-2.5 py-1 font-semibold text-primary-700 uppercase tracking-wide">
                      {articleData.category.replace(/-/g, ' ')}
                    </span>
                    <time datetime={articleData.publishDate.toISOString()}>
                      {formatDate(articleData.publishDate)}
                    </time>
                    <span>•</span>
                    <span>{articleData.readingTime} min</span>
                  </div>
                  <h4 class="mb-2 text-lg lg:text-xl font-bold text-neutral-900 transition-colors group-hover:text-primary-600 line-clamp-2">
                    {articleData.title}
                  </h4>
                  <p class="text-sm text-neutral-600 leading-relaxed line-clamp-2">
                    {articleData.excerpt}
                  </p>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    )}

    <!-- CTA -->
    <div class="text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-xl font-bold text-lg shadow-card hover:shadow-card-hover hover:bg-primary-700 transition-all duration-300"
      >
        View All Articles
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

