---
import { getHotelDetails } from '@/lib/liteapi/hotels';
import { getHotelMainImage, getHotelImages, formatHotelAddress } from '@/lib/liteapi/utils';
import { getRatingColor } from '@/lib/constants';

interface Props {
  hotelId: string;
  showGallery?: boolean;
}

const { hotelId, showGallery = false } = Astro.props;

let hotel: any = null;
let mainImage: string | null = null;
let galleryImages: string[] = [];
let address: string = '';

try {
  hotel = await getHotelDetails(hotelId);
  if (hotel) {
    mainImage = getHotelMainImage(hotel);
    const allImages = getHotelImages(hotel);
    galleryImages = allImages.slice(1, 5); // Get 4 additional images
    address = formatHotelAddress(hotel);
  }
} catch (error) {
  console.error(`[BlogHotelShowcase] Failed to fetch hotel ${hotelId}:`, error);
}

const rating = hotel?.review_score || 0;
const ratingColor = getRatingColor(rating);
const hotelUrl = `/places-to-stay/${hotelId}`;
---

{hotel && (
  <div class="blog-hotel-showcase my-10 bg-white rounded-xl overflow-hidden border border-[#E5E5E5] shadow-lg">
    {/* Main Image */}
    {mainImage && (
      <div class="relative w-full h-[400px] overflow-hidden">
        <img
          src={mainImage}
          alt={hotel.name || 'Hotel'}
          class="w-full h-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
        
        {/* Badges */}
        <div class="absolute top-4 left-4 flex flex-col gap-2">
          {hotel.star_rating && (
            <div class="bg-white/95 backdrop-blur-sm rounded-lg px-3 py-1.5 text-sm font-semibold text-neutral-800 shadow-sm flex items-center gap-1.5">
              <svg class="w-4 h-4 fill-[#F4A460] text-[#F4A460]" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span>{hotel.star_rating} Star{hotel.star_rating !== 1 ? 's' : ''}</span>
            </div>
          )}
          {rating > 0 && (
            <div class={`${ratingColor.bg} ${ratingColor.text} backdrop-blur-sm rounded-lg px-3 py-1.5 text-sm font-bold shadow-sm`}>
              {rating.toFixed(1)} Rating
            </div>
          )}
        </div>
      </div>
    )}

    {/* Content */}
    <div class="p-8">
      <h2 class="text-3xl font-bold text-[#2C2C2C] mb-3">
        {hotel.name}
      </h2>
      
      {address && (
        <div class="flex items-start text-base text-neutral-600 mb-4">
          <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{address}</span>
        </div>
      )}

      {hotel.review_count && rating > 0 && (
        <p class="text-base text-neutral-600 mb-6">
          <span class="font-semibold">{hotel.review_count.toLocaleString()}</span> review{hotel.review_count !== 1 ? 's' : ''} â€¢ 
          <span class="ml-1 font-semibold">{rating.toFixed(1)}</span> average rating
        </p>
      )}

      {hotel.description?.text && (
        <div class="prose prose-lg max-w-none mb-6">
          <p class="text-[#2C2C2C] leading-relaxed">
            {hotel.description.text.split('\n')[0].substring(0, 300)}
            {hotel.description.text.length > 300 ? '...' : ''}
          </p>
        </div>
      )}

      {/* Image Gallery */}
      {showGallery && galleryImages.length > 0 && (
        <div class="grid grid-cols-4 gap-2 mb-6">
          {galleryImages.map((img, idx) => (
            <img
              src={img}
              alt={`${hotel.name} - Image ${idx + 2}`}
              class="w-full h-24 object-cover rounded-lg"
              loading="lazy"
            />
          ))}
        </div>
      )}

      {/* CTA */}
      <a
        href={hotelUrl}
        class="inline-flex items-center gap-2 bg-[#2D5F4F] hover:bg-[#1F4436] text-white px-6 py-3 rounded-lg font-semibold text-base shadow-[0_4px_8px_rgba(45,95,79,0.2)] hover:shadow-[0_4px_12px_rgba(45,95,79,0.3)] transition-all duration-200"
      >
        View Rates & Availability
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
)}

{!hotel && (
  <div class="my-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg text-yellow-800 text-sm">
    <p>Hotel information temporarily unavailable. <a href="/places-to-stay" class="underline">Browse all hotels</a></p>
  </div>
)}

<style>
  .blog-hotel-showcase {
    /* Ensure proper spacing in prose */
  }
  .blog-hotel-showcase :global(img) {
    margin: 0;
  }
</style>

