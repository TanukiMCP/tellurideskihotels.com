---
import { SITE_NAME } from '@/lib/constants';
import Container from './Container.astro';
import { HotelSearchBar } from '@/components/lodging/HotelSearchBar';
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <Container>
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center space-x-2">
        <h1 class="text-2xl font-bold text-ocean-500 font-display">{SITE_NAME}</h1>
      </a>
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/lodging" class="text-gray-700 hover:text-turquoise-500 transition-colors">
          Hotels
        </a>
        <a href="/about" class="text-gray-700 hover:text-turquoise-500 transition-colors">
          About
        </a>
      </nav>
    </div>
    <div class="pb-4 pt-2">
      <HotelSearchBar client:load />
    </div>
  </Container>
</header>

